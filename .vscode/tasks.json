{
    "version": "2.0.0",
    "tasks": [
      {
        "label": "Task: Webpack Serve",
        "type": "shell",
        "command": "npx webpack serve",
        "promptOnClose": true,
        "isBackground": true,
        "problemMatcher": {
          "owner": "webpack",
          "severity": "error",
          "fileLocation": "absolute",
          "pattern": [
            {
              "regexp": "ERROR in [^ ]* (.*):(.*):(.*)",
              "file": 1,
              "line": 2,
              "column": 3
            },
            {
              "regexp": ".*",
              "message": 0
            }
          ],
          "background": {
            "beginsPattern": "webpack building...",
            "endsPattern": "webpack built"
          }
        }
      }
    ]
}
